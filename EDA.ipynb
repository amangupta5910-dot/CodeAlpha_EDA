import pandas as pd
import random

products = ["Aurelia Printed Kurti", "BIBA Cotton Kurta", "W for Women Straight Kurti", "Libas Anarkali Kurta", "Jaipur Kurti Flair Kurta"]
brands = ["Aurelia", "BIBA", "W", "Libas", "Jaipur Kurti"]
reviews = [
    "Quality is very good and comfortable.",
    "Fabric is cheap, not worth the price.",
    "Loved the fitting and color.",
    "Print faded after one wash.",
    "Excellent piece, totally satisfied!",
    "Size is smaller than expected.",
    "Color is exactly as shown.",
    "Fabric is rough and itchy.",
    "Value for money, recommended.",
    "Not good, returning it."
]

data = []
for _ in range(100):
    p = random.randrange(len(products))
    price = random.randint(399, 1499)
    rating = round(random.uniform(2.5, 5.0), 1)
    review = random.choice(reviews)
    data.append([products[p], brands[p], price, rating, review])

df = pd.DataFrame(data, columns=["product_name", "brand", "price", "rating", "review"])

file_path = "/mnt/data/flipkart_kurti_reviews.csv"
df.to_csv(file_path, index=False)

file_path
